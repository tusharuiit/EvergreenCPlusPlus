# Declaration of variables
CC = g++
CC_FLAGS = -w

# File names
EXEC = run
#SOURCES = $(wildcard *.cpp)
SOURCES = $(wildcard *.cpp)
#SOURCES = $(./source/1.cpp ./source/2.cpp)
OBJECTS = $(SOURCES:.cpp=.cpp.o)

# Main target
$(EXEC): $(OBJECTS)
	$(CC) $(OBJECTS) -o $(EXEC)

# To obtain object files
%.cpp.o: %.cpp
	$(CC) -c $(CC_FLAGS) $< -o $@

# To remove generated files
clean:
	rm -f $(EXEC) $(OBJECTS)
